@using UsersAchievements.Models

@model Achievement


@{
    ViewBag.Title = "Edit achievement";
}

<h2>Achievement</h2>

<h3>@Model</h3>

@using (Html.BeginForm("SaveChanges", "Achievements", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="Id" value="@Model.Id" />
    if (!string.IsNullOrEmpty(Model.Image))
    {
        @: Image: <br />
        <input type="image" src="~/Content/Photos/@Model.Image" />
        <br />
        <input type="checkbox" name="DeleteImage" id="DeleteImage" />
        <label for="DeleteImage">Delete image</label>
        <br />
    }
    else
    {
        <input type="file" accept="image/*" name="Image" />
    }
    @: Title: <input name="Title" value="@Model" /><br />
    @: Description: <input name="Description" value="@Model.Description" /><br />
    <button type="submit">Save changes</button><br />
}
<a href="/Achievements">Back to achievements list</a>
