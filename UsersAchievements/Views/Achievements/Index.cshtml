@model List<Achievement>

@{
    Layout = "~/Views/Achievements/_AchievementsLayout.cshtml";
    ViewBag.Title = "Achievements";
}

<ul>
    @foreach (var achievement in Model)
    {
        <li>
            @(string.IsNullOrEmpty(achievement.Image)
                            ? Html.Image("/Content/Photos/default.png", "Achievement image")
                            : Html.Image("/Content/Photos/" + achievement.Image, "Achievement image", new Dictionary<string, object> { { "style", "max-height: 100px; max-width: 100px;" } }))

            @achievement, Description: @achievement.Description
            <a href="/Achievements/Edit/@achievement.Id" class="btn btn-primary" role="button">Edit</a>
            <a href="/Achievements/Delete/@achievement.Id" class="btn btn-danger" role="button">Delete</a>
        </li>
    }
</ul>
@{ Html.BeginForm("Add", "Achievements", FormMethod.Get); }
@Html.Label("Title", "Title") @Html.TextBox("Title", string.Empty)
@Html.Label("Description", "Description") @Html.TextBox("Description", string.Empty)
<button type="submit" class="btn btn-primary">Add Achievement</button>
@{ Html.EndForm(); }
